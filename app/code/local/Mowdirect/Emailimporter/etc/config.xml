<?xml version="1.0"?>
<config>
    <modules>
        <Mowdirect_Emailimporter>
            <version>0.1.0</version>
        </Mowdirect_Emailimporter>
    </modules>

    <global>
        <helpers>
            <emailimporter>
                <class>Mowdirect_Emailimporter_Helper</class>
            </emailimporter>
        </helpers> 

        <models>
            <emailimporter>
                <class>Mowdirect_Emailimporter_Model</class>
            </emailimporter>
        </models>

        <udropship>
            <vendor>
                <fieldsets>
                    <email_stock_importer>
                        <legend>Email Stock Importer</legend>
                        <position>05</position>
                    </email_stock_importer>
                </fieldsets>
                <fields>

                    <email_recipient>
                        <label>Email Recipient To Alert Mis</label>
                        <type>text</type>
                        <fieldset>email_stock_importer</fieldset>
                        <position>5</position>
                        <note><![CDATA[Enter Email Recipient to alert him that we have missed email]]></note>
                    </email_recipient>

                    <allowed_mis_per_vender>
                        <label>How many failures are allowed for this vendor ?</label>
                        <type>text</type>
                        <fieldset>email_stock_importer</fieldset>
                        <position>6</position>
                    </allowed_mis_per_vender>

                    <gmail_importer_access_token>
                        <label>Gmail Importer Access Token</label>
                        <type>textarea</type>
                        <fieldset>email_stock_importer</fieldset>
                        <position>8</position>
                        <note><![CDATA[To genrate token goto menu sales > Dropship > Get Gmail Access Token ]]></note>
                    </gmail_importer_access_token>
                    
                    <last_cron_run>
                        <label>Gmail Last Cron Run</label>
                        <type>text</type>
                        <fieldset>email_stock_importer</fieldset>
                        <position>9</position>
                    </last_cron_run>

                    <import_inventory_csv_regex>
                        <label>Import Inventory CSV file subject line regex</label>
                        <type>text</type>
                        <fieldset>email_stock_importer</fieldset>
                        <position>80</position>
                    </import_inventory_csv_regex>
                    
                    <cron_attachment_mis_count>
                        <type>hidden</type>
                        <fieldset>email_stock_importer</fieldset>
                        <position>90</position>
                    </cron_attachment_mis_count>

                </fields>
            </vendor>
        </udropship>
    </global>

    <crontab>
        <jobs>
            <mowdirect_emailimportercron>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>emailimporter/observer::handleCron</model>
                </run>
            </mowdirect_emailimportercron>
        </jobs>        
    </crontab>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <emailimporter>
                                            <title>Store email importer Module Section</title>
                                        </emailimporter>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    
    <frontend>
        <routers>
            <email_importer>
                <use>standard</use>
                <args>
                    <module>Mowdirect_Emailimporter</module>
                    <frontName>email_importer</frontName>
                </args>
            </email_importer>
        </routers>
    </frontend>
    
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <emailimporter after="Mage_Adminhtml">Mowdirect_Emailimporter</emailimporter>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <sales>
                <children>
                    <udropship>
                        <children>                      
                            <accesstoken translate="title" module="emailimporter">
                                <title>Get Gmail Access Token</title>
                                <action>adminhtml/Emailimporter_index</action>
                                <sort_order>91</sort_order>
                            </accesstoken>    
                        </children>                            
                    </udropship>
                                    
                </children>
            </sales>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <sales>
                            <children>
                                <udropship>
                                    
                                    <children>
                                        <accesstoken translate="title" module="emailimporter">
                                            <title>Get Gmail Access Token</title>
                                        </accesstoken>
                                                
                                    </children>
                                </udropship>
                            </children>
                        </sales>
                    </children>
                </admin>
            </resources>
        </acl>
        
    </adminhtml>

    <menu>
        <catalog translate="title" module="emailimporter">
            <title>Catalog</title>
            <sort_order>30</sort_order>
            <children>
                <products translate="title" module="emailimporter">
                    <title>Manage Products</title>
                    <action>adminhtml/catalog_product/</action>
                    <sort_order>0</sort_order>
                </products>     
            </children>
        </catalog>
    </menu>
</config>